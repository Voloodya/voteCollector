@model IEnumerable<voteCollector.Models.Friend>

@{
    ViewData["Title"] = "Index";
}
<style>
    #buttonsright input {
        font-size: 12px;
        padding: 4px 2px;
        border: solid 1px burlywood;
        width: 100%;
        margin: 2px 0 20px;
        border-radius: 5px;
        display: block;
    }

    #friendTable {
        counter-reset: rowNumber;
        font-size: 14px;
    }

        #friendTable thead {
            background: Gainsboro;
            word-wrap: break-word;
            /*            word-break: break-all;
    */
        }

        #friendTable tbody tr {
            counter-increment: rowNumber;
            font-size: 14px;
        }

        #friendTable tr td:first-child::before {
            content: counter(rowNumber);
            min-width: 1em;
            margin-right: 0.5em;
            font-size: 14px;
        }
</style>

<div id="buttonsright">
    <p>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-success"><i class="far fa-plus-square"></i>Выйти</a>
    </p>
</div>


@if (User.Identity.IsAuthenticated)
{
    <p><font size="4" color="black" face="Arial">@User.Identity.Name</font></p>
    <p id="numberRecords"><font size="4" color="black" face="Arial"></font></p>
}
else
{
    <a asp-controller="Account" asp-action="Login">Вход</a>
    <a asp-controller="Account" asp-action="Register">Регистрация</a>
}


