@model voteCollector.Models.Groupu

@{
    ViewData["Title"] = "Edit";
}

<h4>Группа</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdGroup" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FieldActivityId" class="control-label"></label>
                <select asp-for="FieldActivityId" class="form-control" asp-items="ViewBag.FieldActivityId"></select>
                <span asp-validation-for="FieldActivityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationId" class="control-label"></label>
                <select asp-for="OrganizationId" class="form-control" asp-items="ViewBag.OrganizationId"></select>
                <span asp-validation-for="OrganizationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <input asp-for="Level" class="form-control" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupParentsId" class="control-label"></label>
                <select asp-for="GroupParentsId" class="form-control" asp-items="ViewBag.GroupParentsId"></select>
                <span asp-validation-for="GroupParentsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserResponsibleId" class="control-label"></label>
                <select asp-for="UserResponsibleId" class="form-control" asp-items="ViewBag.UserResponsibleId"></select>
                <span asp-validation-for="UserResponsibleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberEmployees" class="control-label"></label>
                <input asp-for="NumberEmployees" class="form-control" />
                <span asp-validation-for="NumberEmployees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
